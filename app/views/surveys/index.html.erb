<% content_for :title, "Surveys" %>

<h1>Surveys</h1>

<div id="surveys" class="mt-3">
  <% @surveys.each do |survey| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Program: <%= survey.program %></h5>
        <p>Number of questions in this survey: <%= survey.questions.count %></p>
        <p>
          <%= link_to "Show this survey", survey, class: "btn btn-outline-brand" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
